<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_marginTop="30px"
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center_vertical"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="120px"
            android:layout_height="120px"
            android:src="@mipmap/default_image"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"/>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="32px"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_weight="1"
                        android:textColor="#312f30"
                        android:textSize="30px"
                        android:text="夏夜不看夜"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/tv_received"
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:paddingTop="5px"
                        android:paddingBottom="5px"
                        android:background="@drawable/gray_rec_arc_bg"
                        android:text="回复"
                        android:textColor="#312f30"
                        android:textSize="30px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="16px"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#8f8d8e"
                        android:textSize="28px"
                        android:text="昨天01:12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="36px"
                        android:textColor="#8f8d8e"
                        android:textSize="28px"
                        android:text="来自一只小蕃茄"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />




                </LinearLayout>


            </LinearLayout>


        </LinearLayout>





    </LinearLayout>


    <TextView
        android:layout_marginLeft="36px"
        android:layout_marginTop="20px"
        android:text="赞了这条消息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:background="@mipmap/default_image"
            android:layout_width="200px"
            android:layout_height="200px" />

        <LinearLayout
            android:layout_marginLeft="20px"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@小蕃茄"
                android:textSize="28px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <TextView
                android:layout_marginTop="15px"
                android:text="小蕃茄"
                android:textSize="28px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>




    </LinearLayout>


    <ImageView
        android:layout_marginTop="20px"
        android:background="@mipmap/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>