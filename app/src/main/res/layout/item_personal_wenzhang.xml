<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="380px">



        <ImageView
            android:background="@mipmap/default_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <TextView
            android:padding="8px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14px"
            android:layout_marginLeft="30px"
            android:textSize="30px"
            android:textColor="#ffffff"
            android:text="生活|用年轻去承认态度"
            android:background="#96031216"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>



    <LinearLayout
        android:layout_marginBottom="10px"
        android:layout_marginTop="42px"
        android:layout_marginLeft="42px"
        android:layout_marginRight="42px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_weight="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginRight="100px"
            android:text="文章详情文章详情文章详情文章详情文章详情文章详情文章详情文章详情文章详情文章详情文章详情文章详情文章详情文章详情文章详情文章详情文章详情文章详情文章详情文章详情文章详情文章详情"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <ImageView

            android:id="@+id/iv_comment"
            android:layout_marginRight="32px"
            android:background="@mipmap/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/iv_collection"
            android:layout_marginRight="32px"
            android:background="@mipmap/collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_share"
            android:background="@mipmap/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>


</LinearLayout>