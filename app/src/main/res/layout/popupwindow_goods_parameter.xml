<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">


    <LinearLayout
        android:layout_marginTop="32px"
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:layout_width="match_parent"
        android:layout_height="134px">


        <ImageView
            android:background="@mipmap/default_image"
            android:layout_width="134px"
            android:layout_height="match_parent" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="30px"
            android:layout_marginRight="70px"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:maxLines="2"
                android:text="天鹅纯绵"
                android:textColor="#474747"
                android:textSize="30px"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />

            <TextView
                android:text="800.00"
                android:textColor="#474747"
                android:textSize="26px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_cancel"
            android:background="@mipmap/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>



    <TextView
        android:layout_marginLeft="36px"
        android:layout_marginTop="64px"
        android:text="尺寸"
        android:textColor="#474747"
        android:textSize="26px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:layout_marginTop="32px"
        android:id="@+id/recycler_view_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginLeft="36px"
        android:layout_marginTop="62px"
        android:text="颜色"
        android:textColor="#474747"
        android:textSize="26px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:layout_marginTop="32px"
        android:id="@+id/recycler_view_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginLeft="36px"
        android:layout_marginTop="62px"
        android:text="数量"
        android:textColor="#474747"
        android:textSize="26px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <cn.shuyuyin.ui.view.AmountView
        android:layout_marginLeft="36px"
        android:layout_marginTop="32px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <ImageView
        android:layout_marginTop="60px"
        android:background="@mipmap/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_confirm_order"
        android:gravity="center"
        android:text="确定"
        android:textSize="30px"
        android:textColor="#474747"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="96px" />




</LinearLayout>

