<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="96px">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36px"
            android:background="@mipmap/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_title"
            android:textSize="40px"
            android:layout_centerInParent="true"
            android:text="感谢你们"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="52px"
        android:layout_marginBottom="18px"
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:layout_marginRight="60px"
            android:layout_weight="1"
            android:id="@+id/recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_dashang_list_enter"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <TextView
        android:layout_marginTop="114px"
        android:layout_marginBottom="68px"
        android:layout_gravity="center"
        android:text="感谢支持"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:padding="15px"
            android:background="@drawable/dashang_rec_shape"
            android:text=" 5.00元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginLeft="48px"
            android:layout_marginRight="48px"
            android:padding="15px"
            android:background="@drawable/dashang_rec_shape"
            android:text="10.00元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:padding="15px"
            android:background="@drawable/dashang_rec_shape"
            android:text="15.00元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>


    <TextView
        android:layout_marginTop="75px"
        android:layout_marginBottom="68px"
        android:layout_gravity="center"
        android:text="感谢陪伴，一路有你"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>