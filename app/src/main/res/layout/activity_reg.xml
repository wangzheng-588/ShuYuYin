<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_backgroup"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36px"
        android:layout_marginTop="35dp"
        android:background="@mipmap/reg_back" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100px"
        android:text="手机注册"
        android:textColor="#fefefe"
        android:textSize="36px" />


    <EditText

        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58px"
        android:layout_marginRight="58px"
        android:layout_marginTop="30px"
        android:background="@null"
        android:drawablePadding="25px"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:textColor="#78ffffff"
        android:textColorHint="#bbbbbb"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58px"
        android:layout_marginRight="58px"
        android:layout_marginTop="32px"
        android:background="@mipmap/login_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58px"
        android:layout_marginRight="58px">


        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="验证码"
            android:inputType="number"
            android:textColor="#78ffffff"
            android:textColorHint="#bbbbbb"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_send_code"
            android:textColor="#78ffffff"
            android:layout_marginTop="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送"
            android:textSize="28px" />


    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58px"
        android:layout_marginRight="58px"
        android:layout_marginTop="32px"
        android:background="@mipmap/login_line" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58px"
        android:layout_marginRight="58px"
        android:layout_marginTop="30px"
        android:background="@null"
        android:drawablePadding="25px"
        android:hint="请输入6-8位数字或字母密码"
        android:inputType="textPassword"
        android:textColor="#78ffffff"
        android:textColorHint="#bbbbbb"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58px"
        android:layout_marginRight="58px"
        android:layout_marginTop="32px"
        android:background="@mipmap/login_line" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_marginLeft="58px"
        android:layout_marginRight="58px"
        android:layout_marginTop="100px"
        android:background="#D0D0D0"
        android:text="马上加入"
        android:textColor="#474747"
        android:textSize="28px" />


</LinearLayout>