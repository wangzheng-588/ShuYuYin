<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <LinearLayout
        android:layout_marginBottom="24px"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@mipmap/radio_singer_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_marginLeft="80px"
            android:background="@mipmap/radio_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/iv_play"
            android:layout_marginTop="8px"
            android:layout_marginBottom="8px"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px"
            android:src="@mipmap/audio_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <ImageView
            android:layout_marginRight="80px"
            android:background="@mipmap/radio_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/iv_song_sheet"
            android:background="@mipmap/radio_song_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>