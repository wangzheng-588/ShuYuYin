<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="96px">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36px"
            android:background="@mipmap/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_title"
            android:textSize="40px"
            android:layout_centerInParent="true"
            android:text="编辑资料"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_background"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52px"
            android:layout_gravity="center_horizontal"
            android:id="@+id/civ_head"
            android:layout_width="148px"
            android:layout_height="148px"
            android:src="@mipmap/default_image"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:layout_marginTop="30px"
            android:textColor="#312f30"
            android:textSize="30px"
            android:layout_marginBottom="54px"
            android:id="@+id/tv_change_head"
            android:gravity="center_horizontal"
            android:text="点击更换头像"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="32px"
        android:layout_marginBottom="32px"
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textColor="#312f30"
            android:textSize="30px"
            android:layout_weight="1"
            android:text="昵称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:text="点点"
            android:drawablePadding="16px"
            android:textColor="#cdcdcd"
            android:textSize="30px"
            android:drawableRight="@mipmap/edit_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:background="@mipmap/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="32px"
        android:layout_marginBottom="32px"
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:id="@+id/ll_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textColor="#312f30"
            android:textSize="30px"
            android:layout_weight="1"
            android:text="性别"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:drawableRight="@mipmap/edit_enter"
            android:drawablePadding="16px"
            android:textColor="#cdcdcd"
            android:textSize="30px"
            android:id="@+id/tv_gender"
            android:text="未设定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <ImageView
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:background="@mipmap/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_marginTop="32px"
        android:layout_marginBottom="32px"
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:id="@+id/ll_change_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:drawableRight="@mipmap/edit_enter"
            android:textColor="#312f30"
            android:textSize="30px"
            android:layout_weight="1"
            android:text="更换背景"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <ImageView
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:background="@mipmap/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_marginTop="32px"
        android:layout_marginBottom="32px"
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:id="@+id/ll_change_phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textColor="#312f30"
            android:textSize="30px"
            android:layout_weight="1"
            android:text="手机号码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:drawableRight="@mipmap/edit_enter"
            android:drawablePadding="16px"
            android:textColor="#cdcdcd"
            android:textSize="30px"
            android:text="18563985412"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <ImageView
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:background="@mipmap/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_marginTop="32px"
        android:layout_marginBottom="32px"
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:id="@+id/ll_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textColor="#312f30"
            android:textSize="30px"
            android:layout_weight="1"
            android:text="登录密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:drawableRight="@mipmap/edit_enter"
            android:drawablePadding="16px"
            android:textColor="#cdcdcd"
            android:textSize="30px"
            android:text="修改"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <ImageView
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:background="@mipmap/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:layout_marginTop="32px"
        android:layout_marginBottom="32px"
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:id="@+id/ll_change_pay_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textColor="#312f30"
            android:textSize="30px"
            android:layout_weight="1"
            android:text="支付密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:drawableRight="@mipmap/edit_enter"
            android:drawablePadding="16px"
            android:textColor="#cdcdcd"
            android:textSize="30px"
            android:text="修改"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <ImageView
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:background="@mipmap/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_marginTop="32px"
        android:layout_marginBottom="32px"
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:id="@+id/ll_bind_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textColor="#312f30"
            android:textSize="30px"
            android:layout_weight="1"
            android:text="第三方帐号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:drawablePadding="16px"
            android:textColor="#cdcdcd"
            android:textSize="30px"
            android:text="18563985412"
            android:drawableRight="@mipmap/edit_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <ImageView
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:background="@mipmap/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>