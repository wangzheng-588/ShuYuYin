<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/login_backgroup"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36px"
        android:layout_marginTop="35dp"
        android:background="@mipmap/login_close" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:text="Logo"
        android:textColor="#ffffff"
        android:textSize="72px" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="38px"
        android:text="登录后即可关注作者，"
        android:textColor="#fefefe"
        android:textSize="28px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:text="发表评论，同步收藏文章以及论坛"
        android:textColor="#fefefe"
        android:textSize="28px" />


    <android.support.design.widget.TextInputLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:theme="@style/customLineColor"
        android:layout_marginTop="50px">

        <EditText
            android:textColor="#78ffffff"
            android:textSize="14sp"
            android:textColorHint="#bbbbbb"
            android:drawablePadding="25px"
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/login_username"
            android:hint="请输入手机号"
            android:inputType="phone" />
    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        app:theme="@style/customLineColor"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">

        <EditText
            android:textColor="#78ffffff"
            android:drawablePadding="25px"
            android:id="@+id/et_password"
            android:textSize="14sp"
            android:textColorHint="#bbbbbb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/login_password"
            android:hint="请输入密码"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/btn_login"
        android:background="#E27DE2"
        android:layout_gravity="center_horizontal"
        android:textColor="#474747"
        android:textSize="28px"
        android:text="登录"
        android:layout_width="400px"
        android:layout_height="70px" />

    <LinearLayout
        android:layout_marginTop="32px"
        android:layout_gravity="center_horizontal"
        android:layout_width="400px"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_weight="1"
            android:textSize="28px"
            android:text="忘记密码"
            android:textColor="#fefcfc"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/tv_reg"
            android:gravity="right"
            android:layout_weight="1"
            android:textSize="28px"
            android:text="注册"
            android:textColor="#fefcfc"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="80px"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView

            android:background="@mipmap/login_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:background="@mipmap/login_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:background="@mipmap/login_xinlang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <ImageView
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:background="@mipmap/login_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textColor="#bbbbbb"
            android:textSize="28px"
            android:text="登录或注册即同意"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:textColor="#fdfbfb"
            android:textSize="28px"
            android:text="用户服务协议"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>



</LinearLayout>